                    </Border>
                </Button.Content>
            </Button>-->

            <DockPanel Grid.Row="4">
                <Button VerticalAlignment="Top"
                        Name="btnExit"
                        Click="btnExit_Click"
                        HorizontalAlignment="Left"
                        Padding="0"
                        FontFamily="Roboto"
                        Margin="16 -10 0 0 "
                        Content="Выход"
                        Width="55"
                        Height="26"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        FontSize="14"
                        FontWeight="Normal"
                        />
                
                <Button VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Padding="0"
                        FontFamily="Roboto"
                        Margin="0 -10 11 0 "
                        Content="Забыли пароль?"
                        Width="117"
                        Height="26"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        FontSize="14"
                        FontWeight="Normal"
                        />
            </DockPanel>


        </Grid>

 
 
    </Border>
</Window>
