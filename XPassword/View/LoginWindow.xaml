                <Border Panel.ZIndex="1" CornerRadius="10 0 0 10" >
                    <Border.Background>
                        <SolidColorBrush Color="#fff" Opacity=".1"/>
                    </Border.Background>
                </Border>

                <TextBlock Text="Главная"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="poppins"
                               Foreground="#fff"
                           FontSize="15"/>
            </Grid>-->


            <Button Grid.Row="3" Visibility="Collapsed"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                    Content="Войти"
                    Width="240"
                    Height="30"
                    Foreground="White"
                    />

            
            <PasswordBox Grid.Row="1"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         x:Name="passwordBox"
                         Width="240"
                         Height="30"
                         Foreground="White"
                         Background="#252525"
                         Padding="10 0 0 0"
                         materialDesign:HintAssist.Hint="Введите пароль"
                         materialDesign:HintAssist.Foreground="White"
                         materialDesign:HintAssist.IsFloating="False"
                         materialDesign:TextFieldAssist.UnderlineBrush="White"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         
                         />


            <Button Grid.Row="3" VerticalAlignment="Top"
                    Name="btnLogin"
                    Click="btnLogin_Click"
                    Content="Войти"
                    Background="#252525"
                    Width="240"
                    Height="30"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontFamily="Roboto"
                    FontWeight="Normal"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    materialDesign:ButtonAssist.CornerRadius="5"
                    FontSize="14"
                    />

            
            <!--<Button Background="Transparent" Click="Button_Click"
                    BorderThickness="0"
                    Grid.Row="3" Padding="0"
                    
                    ToolTip="MaterialDesignOutlinedButton">
                <Button.Content>
                    <Border CornerRadius="5"
                            Width="240"
