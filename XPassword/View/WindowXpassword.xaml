<Window x:Class="XPassword.WindowXpassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:XPassword"
        mc:Ignorable="d"
        Title="WindowsXpassword"
        Height="512"
        Width="720"
        Background="#1A1A1A ">

    <Window.Resources>
        <Style x:Key="margintopbtn" TargetType="Button">
            <Setter Property="Margin" Value="0 10 0 0"/>
        </Style>


        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
        </Style>

        <ControlTemplate x:Key="ExitBtn" TargetType="Button">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Name="btnExit">
                <Image Source="/Icons/logoutwhite.png" Height="20">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="0.3"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=btnExit}"
                                                     Value="true">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Path=IsPressed, ElementName=btnExit}"
                                                     Value="true">
                                    <Setter Property="Margin" Value="0 5 0 0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Label Content="{TemplateBinding Content}"
                               Foreground="#fff" 
                               Padding="5 0 0 0"
                               VerticalContentAlignment="Center">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Opacity" Value="0.3"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=btnExit}"
                                                     Value="true">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsPressed, ElementName=btnExit}"
                                                     Value="true">
                                    <Setter Property="Margin" Value="0 5 0 0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".1*"/>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button VerticalAlignment="Bottom"
                Content="Выход"
                Margin="0 0 0 5"
                HorizontalAlignment="Left"
                FontFamily="Roboto"
                Width="100"
                Foreground="White"
                FontSize="14"
                FontWeight="Normal"
                Template="{StaticResource ExitBtn}">
        </Button>



        <Border Name="TopMenu" 
                Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderThickness="0 0 0 1" 
                BorderBrush="#484848"
                Padding="0">
            <StackPanel Orientation="Horizontal" Height="41" Margin="0 11 20 -16" HorizontalAlignment="Right">
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/starwhite.png</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/keywhite.png</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/settingswhite.png</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>



        <Border Name="LeftMenu" Grid.Row="1"
                BorderThickness="1 0 0 0"
                BorderBrush="#484848"
                Margin="24 0 0 0"
                >

            <Grid Margin="-1 0 0 0">
                <ScrollViewer Margin="0 0 0 50" Style="{x:Null}" 
                              VerticalScrollBarVisibility="Auto">

                    <StackPanel>
                        <Button Style="{StaticResource margintopbtn}" Content="Все карты" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Почты" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Сайты" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                        <Button Style="{StaticResource margintopbtn}" Content="Банки" Template="{StaticResource ResourceKey=LeftButtons}"/>
                    </StackPanel>
                </ScrollViewer>

                
            </Grid>
        </Border>


        <Grid Grid.Row="1" Grid.Column="1" Margin="10 5 10 0">

            <materialDesign:PackIcon
                Kind="Search"
                Width="24"
                Height="24"
                Foreground="{Binding ElementName=CommentTextBox, Path=BorderBrush}"/>

            <TextBox VerticalAlignment="Top"
                x:Name="CommentTextBox"
                Height="25"
                BorderBrush="#535353"
                materialDesign:HintAssist.Hint="Поиск"
                materialDesign:TextFieldAssist.UnderlineBrush="#515151"
                Padding="25 0 0 0"
                VerticalContentAlignment="Center"
                Foreground="#fff"
  materialDesign:TextFieldAssist.HasClearButton="True">
                <!--<TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsFocus, ElementName=CommentTextBox}"
                                                 Value="true">
                                <Setter Property="BorderBrush" Value="#515151"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>-->
            </TextBox>



            <Border Margin="0 40 0 0"
                    CornerRadius="10 10 0 0"
                    Background="#232323">

            </Border>

        </Grid>






    </Grid>


</Window>
