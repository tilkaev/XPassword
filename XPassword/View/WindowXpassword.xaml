        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:XPassword"
        mc:Ignorable="d"
        Title="WindowsXpassword"
        MinWidth="600"
        MinHeight="300"
        Height="512"
        Width="720"
        WindowStyle="None"
        Background="#1A1A1A ">

