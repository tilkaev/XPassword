<Window x:Class="XPassword.WindowXpassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:XPassword"
        mc:Ignorable="d"
        Title="WindowsXpassword"
        MinWidth="600"
        MinHeight="300"
        Height="512"
        Width="720"
        Background="#1A1A1A ">

    <Window.Resources>
        <Style x:Key="margintopbtn" TargetType="Button">
            <Setter Property="Margin" Value="0 10 0 0"/>
        </Style>


        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="170" Width="20*"/>
            <ColumnDefinition MinWidth="200" Width="35*"/>
            <ColumnDefinition MinWidth="200" Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <GridSplitter Grid.Row="1" Grid.Column="1"
                      Width="2"
                      Background="#484848"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Stretch"
                      ResizeDirection="Columns"/>

        <GridSplitter Grid.Row="1" Grid.Column="2"
                      Width="2"
                      Background="#484848"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Stretch"
                      ResizeDirection="Columns"/>
        
        
        
        
        <Button VerticalAlignment="Top"
                Content="Выход"
                Margin="0 10 0 0"
                HorizontalAlignment="Left"
                FontFamily="Roboto"
                Width="100"
                Foreground="White"
                FontSize="14"
                FontWeight="Normal"
                Template="{StaticResource ExitBtn}"/>


        <StackPanel Orientation="Horizontal" 
                    Grid.ColumnSpan="3"
                    Width="170"
                    Height="52" 
                    VerticalAlignment="Top" >

            <Image Source="/Icons/xpwhite.png"
                   Margin="10 0 0 0"/>

            <TextBlock Background="Transparent"
                       Margin="-10 0 0 0"
                       Text="assword"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       
                       Foreground="#fff"
                       Grid.Row="0"
                       Padding="0"/>
        </StackPanel>



        <Border Name="TopMenu" 
                Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderThickness="0 0 0 1" 
                BorderBrush="#484848"
                Padding="0">
            <StackPanel Orientation="Horizontal" Height="41" Margin="0 11 20 -16" HorizontalAlignment="Right">
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/starwhite.png</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/keywhite.png</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Template="{StaticResource TopButtons}">
                    <Button.Resources>
                        <ImageSource x:Key="Img">/Icons/settingswhite.png</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>



        <Border Name="LeftMenu" Grid.Row="1"
                BorderThickness="1 0 0 0"
                BorderBrush="#484848"
                Margin="24 0 0 0"
                >

            <Grid Margin="-1 0 0 0">
